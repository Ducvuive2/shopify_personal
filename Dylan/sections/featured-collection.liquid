<section class="container py-4">
    <h2 class="text-center my-3">{{ section.settings.title }}</h2>
    <div class="row">
        {% for product in collections[section.settings.featured_colelction].products %}
            {% assign image = product.featured_media.preview_image %}
            <div class="col">
                <div class="card" style="width: 18rem;">
                    {% if image != blank %}
                        <img class="card-image-top" src="{{ image | img_url : 'medium'}}" alt="{{ product.title }}">
                        {% else %}
                        {{ 'product-1' | placeholder_svg_tag: 'card-image-top' }}
                    {% endif %}
                    <div class="card-body">
                        <h3>
                            <a href="{{product.url}}">
                                {{product.title}}
                            </a>
                        </h3>
                        <p>{{product.price | money_without_trailing_zeros}}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</section>

{% schema %}
{
    "name": "Feature Collection",
    "class": "feature-collection",
    "settings": [
        {
            "type": "collection",
            "id": "featured_colelction",
            "label": "Collection"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Featured Collection"
        }
    ],
    "presets": [
        {
            "name": "Featured Collection",
            "category": "Collection"
        }
    ]
}
{% endschema %}